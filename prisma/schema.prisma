// This is the main Prisma schema file.

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma" // Recommended for serverless DBs like Neon
}

// --- AUTHENTICATION (Required for NextAuth.js) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // --- APPLICATION DATA ---
  collections   Collection[]
  searchHistory SearchHistory[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}


// --- APPLICATION MODELS ---

model Collection {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  videos    VideosInCollections[] // Many-to-many relation
}

model Video {
  id           String    @id // The YouTube Video ID
  title        String
  channelTitle String
  publishedAt  DateTime
  thumbnailUrl String
  
  collections  VideosInCollections[] // Many-to-many relation
}

// Join table for the many-to-many relationship between Videos and Collections
model VideosInCollections {
  video        Video      @relation(fields: [videoId], references: [id], onDelete: Cascade)
  videoId      String
  collection   Collection @relation(fields: [collectionId], references: [id], onDelete: Cascade)
  collectionId String
  assignedAt   DateTime   @default(now())

  @@id([videoId, collectionId])
}

model SearchHistory {
  id        String      @id @default(cuid())
  query     String      // Store the search parameters as a JSON string or individual fields
  createdAt DateTime    @default(now())
  userId    String
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
}